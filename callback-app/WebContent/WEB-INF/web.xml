<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0"> 
  <display-name>callback-servlet-app</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <session-config>
  	<session-timeout>60</session-timeout>
  </session-config>
  <servlet>
    <description></description>
    <display-name>XMLSimpleReplyService</display-name>
    <servlet-name>SimpleReply</servlet-name>
    <servlet-class>xml.eventbroker.example.SimpleReplyService</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SimpleReply</servlet-name>
    <url-pattern>/SimpleReply</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>XMLCallback</display-name>
    <servlet-name>XMLCallback</servlet-name>
    <servlet-class>xml.eventbroker.callback.CallbackService</servlet-class>
    <async-supported>true</async-supported>
  </servlet>
  <servlet-mapping>
    <servlet-name>XMLCallback</servlet-name>
    <url-pattern>/XMLCallback</url-pattern>
  </servlet-mapping>
    <servlet>
    <description></description>
    <display-name>XMLJythonReply</display-name>
    <servlet-name>JythonReply</servlet-name>
    <servlet-class>xml.eventbroker.example.JythonReplyService</servlet-class>
    <async-supported>true</async-supported>
  </servlet>
  <servlet-mapping>
    <servlet-name>JythonReply</servlet-name>
    <url-pattern>/JythonReply</url-pattern>
  </servlet-mapping>
</web-app>